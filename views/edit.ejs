<body>
    <%- include('nav.ejs'); -%>





        <form method="POST" action="/chats/<%=find._id%>?_method=PUT" class="form">


            <h1>Edit Chat</h1>



            <div class="form-floating">

                <textarea class="form-control" placeholder="Add your message" name="msg"
